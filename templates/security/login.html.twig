{% extends 'base.html.twig' %}

{% block body %}

	<div class="container flex ">

		<main class="mb-3 mt-5 MemberShip">
			<h1>Connexion
			</h1>
			{% if error %}
				<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<form method="post" action="{{ path('app_login') }}">
				<label for="username">Adresse E-mail :</label>
				<input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required>

				<label for="password">Mot de Passe :</label>
				<input type="password" id="password" class="form-control" name="_password" required>

				<button type="submit" class="btn btn-secondary mt-2">Login</button>
			</form>
		</main>
	</div>
{% endblock %}
