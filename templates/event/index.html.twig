{% extends 'base.html.twig' %}

{% block title %}
	APE - Les Evenements
{% endblock %}

{% block body %}

	<div class="container d-flex flex-wrap ">

		<main class="mb-3 mt-5 col-12 col-md-9 ">
			<h1>
				Nos Evenements
			</h1>

			<div class="mb-3 mt-3">
				<h2>Pourquoi realise-t-on tous ces évenements ?</h2>
				<ul>
					<li>
						Pour faire plaisir aux enfants</li>
					<li>
						Pour récolter des fonds pour les maitresses et nos enfants</li>
				</ul>

			</div>
			<div class="d-flex flex-wrap">
				{% for event in events %}
					<div class="Eventcard mx-3 my-3 col-12 col-sm-6 col-md-4" style="width: 18rem;">
						{% for image in event.images %}
							<img src="{{ vich_uploader_asset(image, 'imageFile' )}}" class="card-img-top" id="MemberImage" alt="{{event.title}}">
						{% endfor %}
						<div class="card-body mt-3">
							<h5 class="card-title bold">{{event.title}}</h5>
							<h4 class='card-date'>{{event.date}}</h4>
							<p class="card-text">{{ event.description}}</p>
						</div>
					</div>
				{% endfor %}
			</div>
		</main>
		{% include "partials/_pub.html.twig" %}
	</div>
{% endblock %}
